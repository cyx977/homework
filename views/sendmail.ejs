<% include partials/bshead %>
<% include admin/adminmenu.ejs %>
        
            <form method="POST" action="/admin/mail" enctype="multipart/form-data">
                
                    <div class = "form-row">
                        <div class="form-group col-md-6">
                            <label for="batch">Select Batch to send Email</label>
                            <select id="batch" name="batch" class="bg-danger">
                                <option value="BIT 2017 Batch">BIT 2017 Batch</option>
                                <option value="BIT 2018 Batch" disabled>BIT 2018 Batch *Disabled => no data*</option>
                                <option value="BIT 2019 Batch" disabled>BIT 2019 Batch *Disabled => no data*</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="teacher">Teacher</label>
                            <select id="teacher" name="teacher" class="bg-danger">
                                <% teacher.forEach(data =>{ %>
                                    <option value="<%= data.name %>" </option>
                                            <%= data.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="subject">Subject</label>
                            <select id="subject" name="subjectcode" class="bg-danger">
                                <% subject.forEach(data =>{ %>
                                    <option value="<%= data.code %>" </option>
                                            <%= data.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="subject">Message Subject</label>
                        <input class="form-control" type="text" id="subject" name="subject" placeholder="Message subject" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" type="text" id="message" name="text" placeholder="Message text" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="file">Attach FIles</label>
                        <input class="form-control-file" type="file" id="file" name="getfile" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" placeholder="password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-danger">submit</button>
                    </div>

                </div>
            </form>
    </div>
    <% include partials/bsfoot %>

